    <!--
        Added the constraints for entity Organization.
    -->
    <changeSet id="20160524081801-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="worker_id"
                                 baseTableName="organization"
                                 constraintName="fk_organization_worker_id"
